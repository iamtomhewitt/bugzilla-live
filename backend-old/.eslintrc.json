{
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
		"react/jsx-indent-props": ["error", 4],
		"no-unused-expressions": "off",
		"no-sequences": "off",
		"prefer-destructuring": "off",
        "global-require": "off",
		"linebreak-style": "off",
		"no-console": "off",
		"no-plusplus": "off",
		"no-unused-vars": "off",
		"import/no-dynamic-require": "off"
    },
    "env": {
        "mocha": true
    }
}
